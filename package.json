{
  "name": "wdlformatter",
  "displayName": "WDL Formatter",
  "description": "WDL formatter extension utilizes the DNA Nexus wdlTools.",
  "publisher": "brudnypiotr",
  "version": "0.0.4",
  "repository": "https://github.com/brudnypiotr/wdlformatter",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:wdl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "wdl",
        "aliases": [
          "Workflow Description Language",
          "WDL",
          "wdl"
        ],
        "extensions": [
          ".wdl"
        ]
      }
    ],
    "commands": [
      {
        "command": "WDL.formatter.upgrade",
        "title": "wdlFormatter: Upgrade WDL file from Draft-2 to 1.0 version",
        "shortTitle": "wdlFormatter: Upgrade"
      },
      {
        "command": "WDL.formatter.fix.ruby",
        "title": "wdlFormatter: Fix WDL Draft-2 file using Ruby fixer, making it compatible with wdlTools",
        "shortTitle": "wdlFormatter: Fix"
      },
      {
        "command": "WDL.formatter.check",
        "title": "wdlFormatter: type-check a WDL file",
        "shortTitle": "wdlFormatter: Check"
      }
    ],
    "configuration": {
      "title": "WDL formatter",
      "properties": {
        "WDL.formatter.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable WDL files formatting."
        },
        "WDL.formatter.wdlTools.location": {
          "type": "string",
          "pattern": ".*\\.jar$",
          "patternErrorMessage": "You must specify executable jar file.",
          "default": "wdlTools.jar",
          "description": "Specifies location of wdlTools.jar executable file."
        },
        "WDL.formatter.fix.rubyRb.location": {
          "type": "string",
          "pattern": ".*\\.rb$",
          "patternErrorMessage": "You must specify fixer.rb file.",
          "default": "fixer.rb",
          "description": "Specifies location of fixer.rb file."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "@vscode/test-electron": "^2.2.0",
    "typescript": "^4.8.4"
  }
}